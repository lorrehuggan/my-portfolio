---
import { Image, Picture } from '@astrojs/image/components';

const { src, alt, aspect } = Astro.props;
---

<Picture
  widths={[650]}
  aspectRatio={aspect}
  fit="cover"
  format="webp"
  src={src}
  alt={alt}
  sizes="(min-width: 1024px) 650px, 100vw"
  class="rounded-lg border-2 shadow-lg border-neutral-800"
/>
