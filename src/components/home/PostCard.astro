---
import Chips from '../post/Chips.astro';

interface Props {
  title: string;
  img: string;
  date: string;
  url: string | undefined;
}
const { title, img, date, url } = Astro.props as Props;
---

<div class="min-w-[15rem]">
  <picture class="">
    <img src={img} alt={title} class="w-60 h-60 object-cover rounded-lg" />
  </picture>
  <a href={url}>
    <p class="mt-2 truncate font-bold">{title}</p>
  </a>
  <p class="text-xs mt-2 text-base-700">{`Published: ${date}`}</p>
</div>
