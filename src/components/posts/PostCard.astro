---
import Chips from "../post/Chips.astro";

interface Props {
  title: string;
  tags: string[];
  date: Date;
  url: string | undefined;
  excerpt: string;
}
const { title, tags, date, url, excerpt } = Astro.props as Props;
---

<div class="w-full flex flex-col gap-4">
  <div class="flex-1 space-y-2">
    <a href={url}>
      <h5 class="color-fade hover:text-accent-500 inline">{title}</h5>
    </a>
    <p class="text-base-500 text-sm font-mono">
      {
        `${new Date(date).toDateString().split(" ")[1]} ${
          new Date(date).toDateString().split(" ")[2]
        } - ${new Date(date).toDateString().split(" ")[3]}`
      }
    </p>
    <p>{excerpt}</p>
    <div class="flex items-center gap-4 mt-2">
      <Chips tags={tags} />
    </div>
  </div>
</div>
